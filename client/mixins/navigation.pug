mixin navigation(is_admin, page)
        nav.gtco-nav(role='navigation')
            .gtco-container
                .row
                    .col-sm-2.col-xs-12
                        #gtco-logo
                            a(href='/') BookFace
                    .col-xs-10.text-right.menu-1
                        ul
                            li(class=`${page == 'index' ? 'active': ''}`)
                                a(href='/') Home
                            li(class=`${page == 'book' ? 'active has-dropdown': 'has-dropdown'}`)
                                a(href='/books') Books
                                ul.dropdown
                                    li 
                                        a(href='/addbook') Add Book
                            if is_admin
                                li(class=`${page == 'admin' ? 'active has-dropdown': 'has-dropdown'}`)
                                    a(href='#') Admin
                                    ul.dropdown
                                        li
                                            a(href='/profiles') Users
                                        li
                                            a(href='/comments') Comments
                                        li
                                            a(href='/admin-books') Books
                                        li  
                                            a(href='/diagrams') Diagrams
                            li(class=`${page == 'about' ? 'active': ''}`)
                                a(href='/about') About
                            li(class=`${page == 'user' ? 'active has-dropdown': 'has-dropdown'}`)
                                a(href='#') User
                                ul.dropdown
                                    li
                                        a(href='/profile') User Profile
                                    li
                                        a(href='/logout') Log Out