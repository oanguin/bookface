include ../books/mixins/book

mixin top-books-slide(books)
	.gtco-section
		.gtco-container
			.row
				.col-md-8.col-md-offset-2.gtco-heading.text-center
					h2 Your Top Rated Books
			.row
				.col-md-12
					.owl-carousel.owl-carousel-carousel
						each book in books 
							.item
								.gtco-item
									a(href=`/book/${book._id}`)
										+image(book.picture)
									h2
										span=book.title
									each author in book.authors
										div.role=`${author.last_name}, ${author.first_name}`