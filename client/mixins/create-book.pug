include ./create-author
mixin create-book
    .gtco-section
        .gtco-container
            .row.gtco-heading
                .col-lg-11.col-centered
                    h2 Add Book
                    if error
                        h3(class="error")= error
            .row
                .col-lg-11.col-centered
                    form(action="/api/book" method="POST")
                        .form-group
                            label(for='title') Book Title:
                            input(type="text" name="title" class="form-control" placeholder="Book Title")
                        .form-group
                            label(for='pages') Number of Pages:
                            input(type="number" name="pages" class="form-control" placeholder="Number of Pages")
                        .form-group
                            input(type="button" class="btn btn btn-info" onclick="addAuthors();" value="Add Authors")
                        .form-group.authors
                            each author,index in authors
                                +create-author(author,index)
                        .form-group
                            input(type="submit" class="btn btn btn-special" value="Add Book")
    head
        script(src='/js/author.js')
