mixin list-books(books)
    .gtco-section
        .gtco-container
            .row
                .col-lg-11.col-centered
                    div.item
                        if books
                            each book in books
                                div.gtco-item
                                    hr
                                    h2=`${'Book Title: '} ${book.title}`
                                    br
                                    h3 Authors
                                    each author,index in book.authors
                                        h5= (index + 1) + '. ' + author.last_name + "," + author.first_name
                                    a(href=`/book/${book.id}`) View
                                    hr
                        else
                            div No Books Found!