- locals.test = 'test'
mixin comments(comments, book, allowDelete)
    .gtco-section
        .gtco-container
            .row
                .col-lg-11.col-centered
                    div.item
                        if comments
                            h2 Comments
                            script(src='/js/CommentClientUtil.js')
                            script(type="text/javascript").
                                 checkDeleteAllowance();
                            each comment in comments
                                .col-md-5.col-md-push-1.gtco-testimonials
                                blockquote(id=comment._id)
                                    icon(class="ti-close" onclick=`removeComment('${comment._id}');`)
                                    p()=comment.comment
                                    p(class='author')
                                        a(href=`/profile/${comment.user._id}`)
                                            cite=`Comment By: ${comment.user.last_name}, ${comment.user.first_name}`
                                    
                        else
                            div No Comments
                        
                        
                        