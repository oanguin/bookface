include ./image

mixin book(book)
    .gtco-section
        .gtco-container
            .row
                .col-lg-11.col-centered
                    div.item
                        if book
                            div.gtco-item
                                h1=book.title
                                +image(book.picture)
                                each author in book.authors
                                    h3=author.last_name + "," + author.first_name

                        else
                            div No Book Found!